#!/bin/bash

#Remove any existing file
rm /mnt/disk1/dvb/kernel-compile-module.sh

#Grab master file
wget https://raw.githubusercontent.com/CHBMB/Unraid-DVB/master/build_scripts/kernel-compile-module.sh -P /mnt/disk1/dvb/

#Change permissions
chmod +x /mnt/disk1/dvb/kernel-compile-module.sh

#Uncomment new config lines
sed -i '43,44 s|#||' /mnt/disk1/dvb/kernel-compile-module.sh

#Uncomment stable line
sed -i '63 s|#||' /mnt/disk1/dvb/kernel-compile-module.sh